<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/dialog_padding_side"
        android:paddingRight="@dimen/dialog_padding_side"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_title"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tab_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_link"
            android:textColor="@color/primary"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="monospace"
            android:text="@string/tab_license"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/butter_knife_title"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/butter_knife_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/butter_knife_link"
            android:textColor="@color/primary"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="monospace"
            android:text="@string/butter_knife_license"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material_dialogs_title"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/material_dialogs_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material_dialogs_link"
            android:textColor="@color/primary"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:paddingBottom="16dp"
            android:text="@string/material_dialogs_license"
            android:textSize="11sp" />

    </LinearLayout>

</ScrollView>